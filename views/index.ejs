<head>
    <title>project</title>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="/stylesheets/projectstyle.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" />
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.1/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
  </head>
  <body>
    <section class=" ">
      <header class="navbar border-bottom" style="background-color: #266cd5">
        <img class="ml-4" style="width: 200px; " src="/images/logo.png" type="image/png" />
  
        <div class="navbar">
          <div class="d-flex mr-3 text-center ">
            <h6 id="welcm"> </h6>
            <h6 class=" text-uppercase  mr-4" id="welcome">
              <h6>
  
  
          </div>
          <div class="" id="game">
            <button id="btn-game" type="button" class="btn btn-info mr-4">
              Game
            </button>
          </div>
          <button id="btn-login" type="button" class="btn btn-info mr-3" data-toggle="modal" data-target="#login">
            Login
          </button>
          <button id="btn-logout" type="button" class="btn btn-info mr-3" onclick="logout();">
            Logout
          </button>
          <button id="btn-signup" type="button" class="btn btn-info mr-3" data-toggle="modal" data-target="#signup">
            Sign Up
          </button>
  
          <div class="" id="profile">
            <button id="btn-signup" type="button" class="btn btn-info mr-4" data-toggle="modal" data-target="#userdata">
              Profile
            </button>
          </div>
  
  
  
        </div>
      </header>
      <div class="modal mt-5" id="login">
        <div class="modal-dialog">
          <div class="modal-content  rounded-4">
            <!-- Modal Header -->
            <div class="modal-header">
              <h4 class="modal-title text-center mx-auto text-uppercase ">Log In</h4>
              <button type="button" class="close " data-dismiss="modal">
                &times;
              </button>
            </div>
            <!-- Modal body -->
            <div class="modal-body">
              <div class="modal-title text-center mx-auto text-uppercase text-danger">
                <h4 id="msg-login"></h4>
              </div>
              <div class="card-body px-4 py-2 px-md-5">
                <form>
                  <input class="form-control" type="email" name="email-login" id="email-login" />
                  <label class="form-label" for="email-login">Email</label>
                  <input class="form-control" type="password" name="password-login" id="password-login" />
                  <label class="form-label" for="password-login">Password</label>
                </form>
                <button class="btn-block  btn btn-primary mt-3" onclick="login()">LogIn</button>
              </div>
            </div>
            <!-- Modal footer -->
            <div class="modal-footer">
              <button type="button" class="btn btn-danger" data-dismiss="modal">
                Close
              </button>
            </div>
          </div>
        </div>
      </div>
      <!-- login Model -->
      <!-- sign up model start -->
      <div class="modal mt-5" id="signup">
        <div class="modal-dialog">
          <div class="modal-content  rounded-4">
            <!-- Modal Header -->
            <div class="modal-header text-center">
              <h4 class="modal-title text-center mx-auto text-uppercase ">Sign Up</h4>
              <button type="button" class="close text-uppercase " data-dismiss="modal">
                &times;
              </button>
            </div>
  
            <!-- Modal body -->
            <div class="modal-body">
              <div class="modal-title text-center mx-auto text-uppercase text-danger">
                <h4 id="msg"></h4>
              </div>
              <div class="card-body px-4 py-2 px-md-5">
                <form>
                  <div class="row">
                    <div class="col-md-6 mb-4">
                      <div class="form-outline">
                        <input class="form-control " type="text" name="name" id="name" />
                        <label class="form-label" for="name">Full Name</label>
                      </div>
                    </div>
                    <div class="col-md-6 mb-4">
                      <div class="form-outline">
                        <input class="form-control " type="email" name="email" id="email" />
                        <label class="form-label" for="email">Email</label>
                      </div>
                    </div>
                  </div>
                  <!-- Emil input -->
                  <div class="form-outline mb-4">
                    <input class="form-control " type="text" name="userName" id="userName" />
                    <label class="form-label" for="userName">User Name</label>
                  </div>
                  <!-- Password input -->
                  <div class="form-outline mb-4">
                    <input class="form-control " type="password" name="password" id="password" />
                    <label class="form-label" for="password">Password</label>
                  </div>
                  <!-- Submit button -->
                </form>
                <button onclick="saveUser()" type="button" class=" text-uppercase btn btn-primary btn-block mb-4 ">
                  Sign up
                </button>
              </div>
            </div>
            <!-- Modal footer -->
            <div class="modal-footer">
              <button type="button" class="btn btn-danger" data-dismiss="modal">
                Close
              </button>
            </div>
          </div>
        </div>
      </div>
      <!-- sign up model end -->
      <!-- USER pROFILE -->
      <div class="modal ml-2 mt-5" id="userdata">
        <div class="modal-dialog float-right">
          <div class="modal-content  rounded-4">
            <!-- Modal Header -->
            <div class="modal-header text-center">
              <h4 class="modal-title text-center mx-auto text-uppercase ">profile</h4>
              <button type="button" class="close text-uppercase " data-dismiss="modal">
                &times;
              </button>
            </div>
  
            <!-- Modal body -->
            <div class="modal-body ">
  
              <div class="card-body px-4 py-2 px-md-5">
                <div id="userdata">
                  <table class="table p-3 d-flex">
                    <thead class="text-success ">
                      <tr>
                        <th>Name</th>
                      </tr>
                      <tr>
                        <th>email</th>
                      </tr>
                      <tr>
                        <th>password</th>
                      </tr>
                      <tr>
                        <th>userName</th>
                      </tr>
  
                      <tr>
                        <th>Action</th>
                      </tr>
                      <tr>
                        <th>Update</th>
                      </tr>
                    </thead>
                    <tbody class="" id="users"></tbody>
                  </table>
                </div>
              </div>
  
            </div>
            <!-- Modal footer -->
            <div class="modal-footer">
              <button type="button" class="btn btn-danger" data-dismiss="modal">
                Close
              </button>
            </div>
          </div>
        </div>
      </div>
      <!-- Update users -->
      <div class="modal mt-5" id="updateuser">
        <div class="modal-dialog">
          <div class="modal-content  rounded-4">
            <!-- Modal Header -->
            <div class="modal-header text-center">
              <h4 class="modal-title text-center mx-auto text-uppercase ">Update Profile</h4>
              <button type="button" class="close text-uppercase " data-dismiss="modal">
                &times;
              </button>
            </div>
  
            <!-- Modal body -->
            <div class="modal-body">
              <div class="modal-title text-center mx-auto text-uppercase text-success">
                <h4 id="msg"></h4>
              </div>
              <div class="card bg-glass background-radial-gradient rounded-4 ">
                <div class="card-body px-4 py-2 px-md-5">
  
                  <form>
                    <!-- 2 column grid layout with text inputs for the first and last names -->
  
                    <div class="row">
                      <div class="col-md-6 mb-4">
                        <div class="form-outline">
                          <input class="form-control ml-1" type="text" name="name-update" id="name-update" />
                          <label class="form-label" for="name-update">Full Name</label>
                        </div>
                      </div>
                      <div class="col-md-6 mb-4">
                        <div class="form-outline">
                          <input class="form-control ml-1" type="email" name="email-update" id="email-update" />
                          <label class="form-label" for="email-update">Email</label>
                        </div>
                      </div>
                    </div>
  
                    <!-- Email input -->
                    <div class="form-outline mb-4">
                      <input class="form-control ml-2" type="text" name="userName-update" id="userName-update" />
                      <label class="form-label" for="userName-update">User Name</label>
                    </div>
  
                    <!-- Password input -->
                    <div class="form-outline mb-4">
                      <input class="form-control ml-1" type="password" name="password-update" id="password-update" />
                      <label class="form-label" for="password-update">Password</label>
                    </div>
  
  
                    <!-- Submit button -->
  
                  </form>
  
  
                  <button onclick="updateUser()" type="button" class=" text-uppercase btn btn-primary btn-block mb-4 "
                    data-dismiss="modal">
                    update User
                  </button>
  
                </div>
              </div>
            </div>
  
            <!-- Modal footer -->
            <div class="modal-footer">
              <button type="button" class="btn btn-danger" data-dismiss="modal">
                Close
              </button>
            </div>
          </div>
        </div>
      </div>
      <div class="contanier"  id="data-request">
        <div class="container col-8 rounded-3 border-2 p-3 gap-4 "   >
            <div class="col-12 border" id="data-players"  >
              <h4>Available players</h4>
      
              <div id="player2Id" class="d-flex-inline p-3"></div>
            </div>

            <div class="col-12 border mt-5" id="data-players "  >
              <h4>Requests To Play a Game</h4>
      
              <div id="myReq" class="d-flex-inline p-3"></div>
            </div>
      
            <div class="col-12 border mt-5" id="data-notifications"  >
              <h4>Games Completed</h4>
              <div id="completed"></div>
            </div>
          </div>
      </div>

       <!-- Game of -->
    <div class="container rounded-3 border mt-2 mb-4 p-2" id="data-Game" style="display:none;">
      
      </div>

      
      <!-- game -->

      
    </section>
</body>
